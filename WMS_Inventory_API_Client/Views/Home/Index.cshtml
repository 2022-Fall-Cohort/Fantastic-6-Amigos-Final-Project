@model WMS_Inventory_API_Client.Models.Account

<body>
    <div align="center" class="menu-header">
        <img src="/css/WMS.logo.jpg" alt="WMS Logo"/>
        <h1>
            <span>WMS Inventory Tracker</span>
        </h1>

    </div>
    <br />
    <div align="left" class="menu">
        <div align="center">
            <h1>
                <span>Main Menu</span>
            </h1>
        </div>
        <br />
        <ol>
            <li>
                <a style="color: blue" href='@Url.Action("Index", "Accounts")'>Account Information</a>
            </li>
            <li>
                <a style="color: blue" href='@Url.Action("Index", "StorageLocation")'>Storage Locations</a>
            </li>
            <li>
                <a style="color: blue" href='@Url.Action("Index", "Container")'>Containers</a> 
            </li>
            <li>
                <a style="color: blue" href='@Url.Action("Index", "Contents")'>Content</a>
            </li>
