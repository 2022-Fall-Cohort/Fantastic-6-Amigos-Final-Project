@model WMS_Inventory_API_Client.Models.Account

@{
    ViewData["Title"] = "Details";
}
<div class="wrapper">
    <div class="sidebar">

        <h2><img class="menu-logo" src="~/css/trans-removebg-preview__1_.png" alt="t"></h2>
        <ul>
            <li><a style="color: white; cursor: pointer" onClick='location.href="/Accounts/Details/1"'><u>Account</u></a></li>
            <li><a style="color: white; cursor: pointer" onClick='location.href="/StorageLocation/Account/1"'><u>Storage Locations</u></a></li>
            <li><a style="color: white; cursor: pointer" onClick='location.href="/Container/Account/1"'><u>Containers</u></a></li>
            <li><a href='@Url.Action("Index", "Contents")'>Content</a></li>
        </ul>
        <div class="social_media">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
    </div>
    <div class="main_content">

<h1 class="page-header">Account Details</h1>
<hr />
<br />
<br />

<div id="no-more-tables">
<table class="table">
    <caption>
        Account
    </caption>
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Address 1
            </th>
            <th>
                Address 2
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                Zip Code
            </th>
        </tr>
    </thead>
  <tbody>
        <tr>

            <td data-title ="Name">
                @Html.DisplayFor(model => model.Name)
            </td>

            <td data-title="Email">
                @Html.DisplayFor(model => model.Email)
            </td>


            <td data-title="Address1">
                @Html.DisplayFor(model => model.Address1)
            </td>

            <td data-title="Address2">
                @Html.DisplayFor(model => model.Address2)
            </td>

            <td data-title="City">
                @Html.DisplayFor(model => model.City)
            </td>

            <td data-title="State">
                @Html.DisplayFor(model => model.State)
            </td>

            <td data-title="ZipCode">
                @Html.DisplayFor(model => model.ZipCode)
            </td>

        </tr>
    </tbody>
</table>
</div>
<div class="center">
    <a asp-action="Edit" asp-route-id="@Model?.Id" style="color:darkred">Edit</a>&nbsp;&nbsp;|&nbsp;&nbsp;
    <a asp-action="Delete" style="color:darkred" asp-route-id="@Model?.Id">Delete</a>
</div>
</div>
</div>
