@model WMS_Inventory_API_Client.Models.StorageLocation

@{
    ViewData["Title"] = "Details";
    TempData["accountId"] = Html.DisplayFor(model => model.AccountId);
}

<div class="wrapper">
    <div class="sidebar">

        <h2><img src="~/css/trans-removebg-preview__1_.png" alt="t"></h2>
        <ul>
            <li><a style="color: white; cursor: pointer" onClick='location.href="/Accounts/Details/1"'><u>Account</u></a></li>
            <li><a style="color: white; cursor: pointer" onClick='location.href="/StorageLocation/Account/1"'><u>Storage Locations</u></a></li>
            <li><a style="color: white; cursor: pointer" onClick='location.href="/Container/Account/1"'><u>Containers</u></a></li>
            <li><a href='@Url.Action("Index", "Contents")'>Content</a></li>
        </ul>
        <div class="social_media">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
    </div>
    <div class="main_content">

<h1 class ="page-header">Storage Location Details</h1>
<hr />
<br />
<br />

<div id="no-more-tables">
    <table class="table">
        <caption>
            Storage Location
        </caption>
        <thead>
            <tr>
                <th>
                    Location Name
                </th>
                <th>
                    Address 1
                </th>
                <th>
                    Address 2
                </th>
                <th>
                    City
                </th>
                <th>
                   State
                </th>
                <th>
                    ZipCode
                </th>
                <!--<th>
                   Longitude
                </th>
                <th>
                   Latitude
                </th>-->
               
            </tr>
        </thead>
        <tbody>
            <tr>
    <td data-title ="Location Name">
                    @Html.DisplayFor(model => model.LocationName)
    </td>

    <td data-title="Address1">
                    @Html.DisplayFor(model => model.Address1)
    </td>

    <td data-title="Address2">
                    @Html.DisplayFor(model => model.Address2)
    </td>

    <td data-title="City">
                    @Html.DisplayFor(model => model.City)
    </td>

    <td data-title ="State">
                    @Html.DisplayFor(model => model.State)
    </td>

    <td data-title="ZipCode">
                    @Html.DisplayFor(model => model.ZipCode)
    </td>

   <!--<td data-title="Longitude">
                    @Html.DisplayFor(model => model.Longitude)
    </td>

   <td data-title="Latitude">
                    @Html.DisplayFor(model => model.Latitude)
    </td>-->

            </tr>
        </tbody>
    </table>
 </div>   
<br/>
<div id="no-more-tables">
<table class="table">
        <caption>
            Containers
        </caption>
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Description
            </th>
             <th>
                 Details
              </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.container)
        {
            <tr>
                    <td data-title="Type">
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                    <td data-title="Description">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @{
                        TempData["id"] = item.Id;
                    }
                    <a style="color: royalblue; cursor: pointer" onClick='location.href="/Container/Edit/"+@TempData["id"]'><u>Edit</u></a> |
                    <a style="color: royalblue; cursor: pointer" onClick='location.href="/Container/Details/"+@TempData["id"]'><u>Details</u></a> |
                    <a style="color: royalblue; cursor: pointer" onClick='location.href="/Container/Delete/"+@TempData["id"]'><u>Delete</u></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<div class="center">
    <a class="link" onClick='location.href="/StorageLocation/Account/"+@TempData["accountId"]'><u>Back to Storage Location List</u></a>&nbsp;&nbsp;|&nbsp;&nbsp;
    <a class="link" onClick='location.href="/Container/Create/"'><u>Add Container</u></a>

</div>
</div>
</div>
