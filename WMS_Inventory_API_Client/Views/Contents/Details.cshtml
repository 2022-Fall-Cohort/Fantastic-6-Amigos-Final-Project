@model WMS_Inventory_API_Client.Models.Content

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Content</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Container Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Container.Description)
        </dd>
        @{
            TempData["containerid"] = Html.DisplayFor(model => model.Container.Id);
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a style="color: royalblue; cursor: pointer" onClick='location.href="/Container/Details/"+@TempData["containerId"]'><u>Back to Container</u></a>
</div>
